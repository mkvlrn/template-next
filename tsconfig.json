{
  "extends": ["@mkvlrn/config/tsconfig-next"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true
  },

  // also for next
  "include": [
    "./*.config.ts",
    ".next/types/**/*.ts",
    "./build/types/**/*.ts",
    "./css.d.ts",
    "./next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],

  "exclude": ["node_modules"]
}
