  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:mkvlrn/template-next"
  },
  "keywords": [
    "nextjs",
    "esm",
    "template"
  ],
  "engines": {
    "node": ">=24.x"
  },
  "scripts": {
